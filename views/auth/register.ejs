<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign UP</title>
</head>

<body>
    <!-- display error -->
    <% if(error){ %>
        <p>
            Error: <%= error %>
        </p>
        <% } %>

            <h2>Sign Up New Account :</h2>
            <form action="/auth/register" method="POST">
                <div>
                    <label>Username </label>
                    <input type="text" name="username" placeholder="Your username" required />
                </div>

                <br />

                <div>
                    <label>Email </label>
                    <input type="text" name="email" placeholder="Your email" required />
                </div>

                <br />

                <div>
                    <label>Password </label>
                    <input type="password" name="password" placeholder="Your password" required />
                </div>

                <br />

                <div>
                    <label>First Name </label>
                    <input type="text" name="first_name" placeholder="Your first name" required />
                </div>

                <br />

                <div>
                    <label>Last Name </label>
                    <input type="text" name="last_name" placeholder="Your last name" required />
                </div>

                <br />

                <div>
                    <label>Gender:</label>
                    <select name="gender">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <br>

                <div>
                    <label>Country </label>
                    <input type="text" name="country" placeholder="Your Country" required />
                </div>

                <br />

                <div>
                    <label>Province</label>
                    <input type="text" name="province" placeholder="Your Province" required />
                </div>

                <br />

                <div>
                    <label>City </label>
                    <input type="text" name="city" placeholder="Your City" required />
                </div>

                <br />

                <div>
                    <label>Address </label>
                    <input type="text" name="address" placeholder="Your address" required />
                </div>

                <br />

                <div>
                    <label>Phone </label>
                    <input type="text" name="phone" placeholder="Your Phone Number" required />
                </div>

                <br />

                <input type="submit" />
            </form>
</body>

</html>
